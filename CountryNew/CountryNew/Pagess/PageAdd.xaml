<Page x:Class="CountryNew.Pagess.PageAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CountryNew.Pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdd">

    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Название страны" />
            <TextBox x:Name="NameCountryTxt"/>
            
            <TextBlock Text="Название страны на EN" />
            <TextBox x:Name="NameCountryENTxt"/>

            <TextBlock Text="Выбирете групу страны" />
            <ComboBox Name="CmbGroup" DisplayMemberPath="CroupName"/>

            <TextBlock Text="Дата" />
            <DatePicker x:Name="DatePick"/>

            <Button Content="Отправить" Click="SaveBtn"/>
        </StackPanel>
    </Grid>
</Page>
